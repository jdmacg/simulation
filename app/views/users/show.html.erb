<%= render "sidebar" %>
<div class='content-container'>
  <% flash.each do |k, v| %>
    <div id="error"><%= v %></div>
  <% end %>
  <div class="profile-snap">
    <div class="cash_display">Total Cash: <%=number_to_currency(@team.cash_balance, precision: 0)%></div>
    <div class="cash_display">Total Property Value: <%=number_to_currency(@totalPropertyValue, precision: 0)%></div>
  </div>
  <div class="cards">
    <% @properties.each do |prop| %>
        <div class="container">
      		<header class="card-header">
      			<div class="bio">
              <img src="https://pbs.twimg.com/media/Cg_WlKDWkAAiqn4.jpg" alt="background" class="bg">
      				<div class="desc">
      					<h3><%= prop.name%></h3>
      					<p>Located in <%= prop.city%> <%=prop.province%></p>
      				</div>
      			</div>
      		</header>

      		<div class="content">
            <h2><%=prop.name%></h2>
      			<div class="data">
      	       <ul>
                 <li>
                   <%= number_to_currency(prop.value, precision: 0)%>
                 </li>
               </ul>
      			</div>
      			<div class="follow">
              <%if !prop.developed and !prop.in_development%>
                <%= link_to 'Develop', develop_path(prop.id), class: "dvlp-link" %>
              <%end%>
            </div>
      		</div>
      	</div>
    <% end %>
  </div>
</div>
